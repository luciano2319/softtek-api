generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PersonGender {
  male
  female
  NA
}

model Person {
  id         String   @id @default(uuid())
  name       String
  height     Int?
  mass       Int?
  hair_color String?
  skin_color String?
  eye_color  String?
  birth_year String?
  gender     PersonGender @default(NA)
  homeworld  Int
  Planet     Planet   @relation(fields: [homeworld], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Planet {
  id              Int   @id
  name            String
  rotation_period Int?
  orbital_period  Int?
  diameter        Int?
  climate         String?
  gravity         String?
  terrain         String?
  surface_water   String?
  population      Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  Person          Person[]
}